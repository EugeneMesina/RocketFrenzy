<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="androidsupersquad.rocketfrenzy.Fragments.ShopFragment">


    <ImageView
        android:id="@+id/Coin"
        android:layout_width="70dp"
        android:layout_height="59dp"
        app:srcCompat="@drawable/coin" />

    <ExpandableListView
        android:id="@+id/ShopList"
        android:layout_width="match_parent"
        android:layout_height="497dp"
        android:layout_below="@+id/Coin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="100dp"/>

    <TextView
        android:id="@+id/ShopCoinAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ShopList"
        android:layout_marginBottom="17dp"
        android:layout_toEndOf="@+id/Coin"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="28sp"
        android:layout_toRightOf="@+id/Coin" />

</RelativeLayout>
